{
  "name": "fiuba-reviews",
  "private": true,
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@fontsource-variable/google-sans-code": "^5.2.3",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/source-serif-4": "^5.2.9",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "@lucide/svelte": "^0.562.0",
    "@sveltejs/adapter-vercel": "^6.3.1",
    "@sveltejs/kit": "^2.52.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.13",
    "@types/pg": "^8.16.0",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.9",
    "drizzle-orm": "^0.45.1",
    "mode-watcher": "^1.1.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.51.2",
    "svelte-check": "^4.4.0",
    "tailwind-merge": "^3.4.1",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@fontsource/noto-serif": "^5.2.9",
    "@valibot/i18n": "^1.0.0",
    "bits-ui": "^2.15.5",
    "fuse.js": "^7.1.0",
    "pg": "^8.18.0",
    "postgres": "^3.4.8",
    "posthog-js": "^1.351.1",
    "svelte-turnstile": "^0.11.0",
    "valibot": "^1.2.0"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": false,
    "trailingComma": "none",
    "printWidth": 100,
    "objectWrap": "collapse",
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports",
      "prettier-plugin-svelte",
      "prettier-plugin-tailwindcss"
    ],
    "importOrder": [
      "<TYPES>",
      "<THIRD_PARTY_MODULES>",
      "^[./]",
      "^\\$"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ],
    "tailwindStylesheet": "./src/routes/layout.css"
  }
}
